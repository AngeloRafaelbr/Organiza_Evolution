model Transaction {
  id         Int       @id @default(autoincrement())
  data       DateTime
  tipo       Int       // 0 para income, 1 para spent
  categoria  String
  descricao  String
  valor      Float
  createdAt  DateTime  @default(now())

  // Relação com User futuramente
